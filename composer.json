{
    "name": "signalforge/dotenv",
    "description": "Pure PHP implementation of signalforge_dotenv extension - load, parse, and decrypt .env files",
    "type": "library",
    "license": "MIT",
    "keywords": ["dotenv", "env", "environment", "configuration", "encryption"],
    "require": {
        "php": ">=8.3",
        "ext-sodium": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Signalforge\\Dotenv\\": "src/Signalforge/Dotenv/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Signalforge\\Dotenv\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
